}

<h2>Matches</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamA.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamB.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tournament.TournamentName)
